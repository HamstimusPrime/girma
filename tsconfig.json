{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "es2015",
    "module": "none",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "noEmit": false,
    "isolatedModules": false
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
